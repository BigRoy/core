{
    "$schema": "http://json-schema.org/schema#",

    "title": "mindbender-core:asset-2.0",
    "description": "A unit of data",

    "type": "object",

    "additionalProperties": true,

    "required": [
        "schema",
        "type",
        "type",
        "name",
        "silo",
        "data"
    ],

    "properties": {
        "schema": {
            "description": "Schema identifier for payload",
            "type": "string"
        },
        "type": {
            "description": "The type of document",
            "type": "string",
            "const": "asset"
        },
        "name": {
            "description": "Name of directory",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.]*$"
        },
        "silo": {
            "description": "Parent directory of asset",
            "type": "string"
        },
        "data": {
            "description": "Document metadata",
            "type": "object"
        }
    },

    "definitions": {}
}