{
    "$schema": "http://json-schema.org/schema#",

    "title": "mindbender-core:container-1.0",
    "description": "A loaded asset",

    "type": "object",

    "additionalProperties": true,

    "required": [
        "schema",
        "name",
        "objectName",
        "asset",
        "subset",
        "version",
        "path"
    ],

    "properties": {
        "schema": {
            "description": "Schema identifier for payload",
            "type": "string",
            "const": "mindbender-core:container-2.0"
        },
        "name": {
            "description": "Full name of application object",
            "type": "string"
        },
        "path": {
            "description": "Absolute path",
            "type": "string"
        },
        "objectName": {
            "description": "Name of internal object, such as the objectSet in Maya.",
            "type": "string"
        },
        "subset": {
            "description": "Name of source subset",
            "type": "string"
        },
        "asset": {
            "description": "Name of source asset",
            "type": "string"  
        },
        "version": {
            "description": "Version number",
            "type": "number"
        },
        "author": {
            "description": "Name of the author of the published version",
            "type": "string"
        }
    }
}
