{
    "$schema": "http://json-schema.org/schema#",

    "title": "mindbender-core:representation-2.0",
    "description": "The inverse of an instance",

    "type": "object",

    "additionalProperties": true,

    "required": [
        "schema",
        "type",
        "name",
        "data"
    ],

    "properties": {
        "schema": {
            "description": "Schema identifier for payload",
            "type": "string",
            "const": "mindbender-core:representation-2.0"
        },
        "type": {
            "description": "The type of document",
            "type": "string",
            "const": "representation"
        },
        "name": {
            "description": "Name of directory",
            "type": "string",
            "pattern": "^[a-zA-Z0-9_.]*$"
        },
        "data": {
            "description": "Document metadata",
            "type": "object"
        },
        "dependencies": {
            "description": "Other representation that this representation depends on",
            "type": "array",
            "items": {"type": "string"}
        },
        "context": {
            "description": "Summary of the context to which this representation belong.",
            "type": "object",
            "properties": {
                "project": {"type": "string"},
                "asset": {"type": "string"},
                "silo": {"type": "string"},
                "subset": {"type": "string"},
                "version": {"type": "number"},
                "representation": {"type": "string"}
            }
        }
    }
}
